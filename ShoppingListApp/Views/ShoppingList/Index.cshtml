@model IEnumerable<ShoppingListApp.Models.ShoppingList>

@{
    ViewBag.Title = "Shopping Lists";
}

<br />
<h2>Shopping Lists</h2>

<input type="button" value="Add List" style="float: right;" onclick="location.href='@Url.Action("Create", "ShoppingList")'" />
<p>
    &nbsp;
</p>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<hr />
<table class="table">
    <tr bgcolor="#D3D3D3">
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>Options</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Color)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
            @*<input type="button" value="Show" onclick="location.href='@Url.Action("ItemsByList", "ShoppingListItem" )'" />*@
            @Html.ActionLink("Show", "ItemsByList", "ShoppingListItem", new { id=item.Id }, null) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            @*<input type="button" value="Delete" oneclick="location.href='@Url.Action("Delete", "Delete")'" />*@
        </td>
    </tr>
}

</table>
